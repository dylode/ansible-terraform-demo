terraform {
  required_providers {
    proxmox = {
      source  = "telmate/proxmox"
      version = "2.9.14"
    }
    ansible = {
      source  = "ansible/ansible"
      version = "1.1.0"
    }
  }
}

provider "proxmox" {
    pm_api_url = "{{ target_provider.vars.api_url }}"
    pm_api_token_id = "{{ target_provider.vars.token_id }}"
    pm_api_token_secret = "{{ target_provider.vars.token_secret }}"
}
